@model BlogListViewModel

@{
    ViewData["Title"] = "Blog";
}

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <h1>Our Blog</h1>
            <p>Read the latest thoughts and news from our teams.</p>
        </div>
    </div>

    <div class="row">
        @foreach (BlogPost post in Model.BlogPosts)
        {
            <div class="col-lg-4 mb-2">
                <div class="card">
                    <img class="card-img-top" src="@post.Image" alt="Card image cap">
                    <div class="card-body">
                        <h5 class="card-title">@post.Title</h5>
                        <p class="card-text">
                            @{
                                var tagsRemoved = System.Text.RegularExpressions.Regex.Replace(post.HtmlContent ?? "", "<.*?>", "");
                                var encodedText = System.Net.WebUtility.HtmlDecode(tagsRemoved);
                                var preview = encodedText.Length > 100 ? encodedText.Substring(0, 100) + "..." : encodedText;
                            }
                            @preview
                        </p>
                        <a href="@Url.Action("Index", "Blog", new {id = post.Id})" class="btn btn-primary">Read more</a>
                    </div>
                </div>
            </div>
        }
    </div>

    <div class="row mt-5 align-content-center">
        <nav aria-label="Page Navigation">
            <ul class="pagination">
                <li class="page-item @(Model.HasPreviousPage ? "" : "disabled")"><a class="page-link" href="@Url.Action("List", "Blog", new {page = Model.CurrentPage - 1})">Previous</a></li>
                @for (int i = 1; i <= Model.TotalPages; i++)
                {
                    <li class="page-item @(Model.CurrentPage == i ? "active" : "")"><a class="page-link" href="@Url.Action("List", "Blog", new { page = i })">@(i)</a></li>
                }
                <li class="page-item @(Model.HasNextPage ? "" : "disabled")"><a class="page-link" href="@Url.Action("List", "Blog", new { page = Model.CurrentPage + 1 })">Next</a></li>
            </ul>
        </nav>
    </div>

</div>